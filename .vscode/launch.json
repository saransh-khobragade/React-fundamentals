{
  //https://code.visualstudio.com/docs/reference/variables-reference
  "version": "0.2.0",
  "inputs": [
    {
      "id": "projectName",
      "type": "pickString",
      "description": "Select a React project",
      "options": [
        "01-react-template",
        "02-helloworld",
        "03-inline-styling",
        "04-useState-hook",
        "05-useRef-hook",
        "06-forms",
        "07-useEffect-hook",
        "08-memo",
        "09-useCallback-hook",
        "10-custom-hook"
      ]
    },
    {
      "id": "port",
      "type": "promptString",
      "description": "Enter the dev server port (default: 5173)",
      "default": "5173"
    }
  ],
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/${input:projectName}/src"
    }
  ]
}
